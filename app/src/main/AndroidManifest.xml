<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dlsu.getbetter.getbetter">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".NewPatientRecordActivity"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ExistingPatientActivity"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".UploadPatientToServerActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".UpdatePatientRecordActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".CreateUpdateCaseRecordActivity"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".NewCaseRecordActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".UploadCaseRecordToServerActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".DownloadContentActivity"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".ViewCaseRecordActivity"></activity>
    </application>

</manifest>