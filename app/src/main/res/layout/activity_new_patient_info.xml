                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Birthday"-->
                    <!--android:textSize="18sp" />-->

            <!--</LinearLayout>-->

            <!--<Button-->
                <!--android:id="@+id/new_patient_set_birthday_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Set Birthday"-->
