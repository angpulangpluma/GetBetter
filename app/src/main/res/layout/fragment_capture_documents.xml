<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dlsu.getbetter.getbetter.CaptureDocumentsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:text="GetBetter"
        android:textColor="@color/cardBackground"
        android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.CardView
            android:id="@+id/user_label_container"
            android:layout_width="1200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current User: "
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/user_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_label_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPPORTING DOCUMENTS"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:id="@+id/capture_docu_patient_info_image"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:src="@drawable/ic_add_image"
                            />

                        <TextView
                            android:id="@+id/patient_info_form"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient Information Form"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_below="@id/capture_docu_patient_info_image"
                            android:layout_alignLeft="@id/capture_docu_patient_info_image"
                            android:layout_alignStart="@id/capture_docu_patient_info_image"
                            />

                        <TextView
                            android:id="@+id/capture_docu_view_patient_info_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/capture_docu_patient_info_image"
                            android:layout_alignRight="@id/capture_docu_patient_info_image"
                            android:layout_alignEnd="@id/capture_docu_patient_info_image"
                            android:text="View"
                            android:textColor="@color/blueButton"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/capture_docu_family_social_history_image"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:src="@drawable/ic_add_image"
                            />

                        <TextView
                            android:id="@+id/family_social_form"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Family/Social History Form"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_below="@id/capture_docu_family_social_history_image"
                            android:layout_alignLeft="@id/capture_docu_family_social_history_image"
                            android:layout_alignStart="@id/capture_docu_family_social_history_image"
                            />

                        <TextView
                            android:id="@+id/capture_docu_view_family_social_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/capture_docu_family_social_history_image"
                            android:layout_alignEnd="@id/capture_docu_family_social_history_image"
                            android:layout_alignRight="@id/capture_docu_family_social_history_image"
                            android:text="View"
                            android:textColor="@color/blueButton"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/capture_docu_chief_complaint_image"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:src="@drawable/ic_add_image"
                            />

                        <TextView
                            android:id="@+id/chief_complaint_form"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chief Complaint Form"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_below="@id/capture_docu_chief_complaint_image"
                            android:layout_alignLeft="@id/capture_docu_chief_complaint_image"
                            android:layout_alignStart="@id/capture_docu_chief_complaint_image"
                            />

                        <TextView
                            android:id="@+id/capture_docu_view_chief_complaint_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/capture_docu_chief_complaint_image"
                            android:layout_alignRight="@id/capture_docu_chief_complaint_image"
                            android:layout_alignEnd="@id/capture_docu_chief_complaint_image"
                            android:text="View"
                            android:textColor="@color/blueButton"
                            />


                    </RelativeLayout>


                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/capture_document_fragment_back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@color/redButton"
                        android:text="BACK"
                        android:textColor="@color/cardBackground"
                        android:paddingLeft="100dp"
                        android:paddingRight="100dp"/>

                    <Button
                        android:id="@+id/capture_docu_fragment_next_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/greenButton"
                        android:text="NEXT"
                        android:textColor="@color/cardBackground"
                        android:paddingLeft="100dp"
                        android:paddingRight="100dp"/>

                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>
