<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_status_drawable">

    <android.support.v7.widget.CardView
        android:id="@+id/existing_patient_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/upload_patient_item_profile_image"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_picture_placeholder"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"/>

            <TextView
                android:id="@+id/upload_patient_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/upload_patient_item_profile_image"
                android:layout_toEndOf="@+id/upload_patient_item_profile_image" />

            <TextView
                android:id="@+id/existing_patient_item_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04/01/2015"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_toRightOf="@+id/upload_patient_item_name"
                android:layout_toEndOf="@+id/upload_patient_item_name" />

            <TextView
                android:id="@+id/existing_patient_item_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/existing_patient_item_birthdate"
                android:layout_toEndOf="@id/existing_patient_item_birthdate"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>





    </LinearLayout>